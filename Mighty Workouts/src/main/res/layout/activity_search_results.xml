<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.mightyworkouts.controller.searchresults.SearchResultsActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/signup_cross_height"
            android:layout_height="@dimen/signup_cross_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/sign_up_red_cross_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sign_up"
            android:textSize="@dimen/txt_top_bar"
            android:textColor="@color/dark_red"/>
    </RelativeLayout>
    <include layout="@layout/content_search_results" />


</RelativeLayout>
