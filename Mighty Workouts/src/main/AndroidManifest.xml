<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mightyworkouts" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controller.main.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >

        </activity>
        <activity
            android:name=".controller.login.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >


        </activity>
        <activity
            android:name=".controller.signup.SignUpActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >

        </activity>
        <activity
            android:name=".controller.myworkout.MyWorkOutActivity"
            android:label="@string/title_activity_my_work_out"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".controller.search.SerachActivity"
            android:label="@string/title_activity_serach"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".controller.searchresults.SearchResultsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"  >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>
        <activity
            android:name=".controller.community.CommunityActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"  >
       </activity>
        <activity
            android:name=".controller.faq.FAQActivity"
            android:label="@string/title_activity_faq"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".controller.moreinfo.MoreInfoActivity"
            android:label="@string/title_activity_more_info"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
